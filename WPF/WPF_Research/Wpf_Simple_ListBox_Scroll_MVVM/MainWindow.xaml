<Window x:Class="Wpf_Simple_ListBox_Scroll_MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Simple_ListBox_Scroll_MVVM"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="525">
    <Grid>
        <ListBox x:Name="listBox" Margin="10,10,10,30" ItemsSource="{Binding Items}"/>
        <CheckBox x:Name="checkBox" Content="Auto Scroll" HorizontalAlignment="Left" Margin="10,0,0,10" Height="15" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
