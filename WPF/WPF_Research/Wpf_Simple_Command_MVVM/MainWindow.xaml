<Window x:Class="Wpf_Simple_Command_MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Simple_Command_MVVM"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    
    <Window.InputBindings>
        <KeyBinding Key="F2" Command="{Binding SimpleAction}" />
    </Window.InputBindings>
    
    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" Margin="10,10,0,0" Command="{Binding SimpleAction}" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
